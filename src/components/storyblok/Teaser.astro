---
import { renderRichText, storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props

const renderedRichText = renderRichText(blok.content)
---

<div {...storyblokEditable(blok)}>
  <h2 class='text-center text-4xl font-bold text-primary py-12'>
    {blok.headline}
  </h2>
  <div set:html={renderedRichText} class='text-center mb-12'></div>
</div>
